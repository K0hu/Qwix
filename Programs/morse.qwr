; Logic:

msg. "Morse code: "
exit. "quit"
tab. "\n"
nextm. " "
# al {0} "" :mainloop

mainloop.:
    print tab
    prompt comp msg
    comp & exit ? quit ~mov esi, comp~:loop

loop.:
    ~mov al, byte [esi]
    ~cmp al, 0
    ? mainloop

    .al % 'a' +a ? morse
    .al % 'b' +b ? morse
    .al % 'c' +c ? morse
    .al % 'd' +d ? morse
